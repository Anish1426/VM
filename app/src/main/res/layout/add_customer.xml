<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B3B63"
    android:padding="12dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:outlineProvider="paddedBounds"
        android:text="Add Our Customer"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <EditText
            android:inputType="number"
            android:drawableLeft="@drawable/code"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:id="@+id/cusGst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter GST No"
            android:textColorHint="#ffffff"
            />
        <EditText
            android:drawableLeft="@drawable/product"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:id="@+id/cusName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Party Name"
            android:textColorHint="#ffffff"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/cusAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Address"
                android:textColorHint="#ffffff"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:drawableLeft="@drawable/product"
                android:drawablePadding="12dp"
                android:padding="12dp"/>
        </ScrollView>

        <EditText
            android:inputType="text"
            android:drawableLeft="@drawable/bus"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:id="@+id/cusState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter State"
            android:textColorHint="#ffffff"
            />
        <EditText
            android:inputType="phone"
            android:drawableLeft="@drawable/bus"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:id="@+id/cusContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Contact "
            android:textColorHint="#ffffff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/cusCancel"
            android:layout_marginRight="56dp"
            android:paddingLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edit"
            android:text="CANCEL"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/cusSubmit"
            android:paddingLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edit"
            android:text="SUBMIT"
            android:textSize="18dp"/>
    </LinearLayout>

</LinearLayout>